<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>kudos</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- War -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/webapps</outputDirectory>
      <includes>
        <include>${project.groupId}:exo-ethereum-wallet-webapps:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>exo-ethereum-wallet.war</outputFileNameMapping>
    </dependencySet>
    <!-- Libraries -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>${project.groupId}:exo-ethereum-wallet-services:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>exo-ethereum-wallet-services.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>${project.groupId}:exo-ethereum-wallet-reward-services:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>exo-ethereum-wallet-reward-services.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>${project.groupId}:exo-ethereum-wallet-contracts:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>exo-ethereum-wallet-contracts.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.web3j:core:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>web3j-core.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.web3j:utils:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>web3j-utils.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.web3j:abi:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>web3j-abi.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.java-websocket:Java-WebSocket:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>Java-WebSocket.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>io.reactivex:rxjava:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>rxjava.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.bouncycastle:bcprov-jdk15on:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>bcprov-jdk15on.jar</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
