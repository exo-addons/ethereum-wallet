{
  "name": "exo-ethereum-wallet",
  "version": "2.1.0",
  "description": "eXo Ethereum Wallet",
  "repository": {
    "type": "git",
    "url": "https://github.com/exo-addons/exo-ethereum-wallet"
  },
  "scripts": {
    "start": "webpack --config webpack.dev.js --mode development",
    "dev": "webpack-dev-server --config webpack.dev.js --mode development --hot",
    "watch": "webpack --config webpack.watch.js --progress --colors --watch -d",
    "test": "jest",
    "lint": "eslint .",
    "test-coverage": "jest --coverage",
    "build": "webpack --config webpack.prod.js --mode production"
  },
  "author": "eXo",
  "license": "LGPL",
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "connect-api-mocker": "^1.4.0",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.17.0",
    "ethereum-qr-code": "^0.3.0",
    "fetch-mock": "^7.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.4",
    "jest-fetch-mock": "^1.7.5",
    "jest-localstorage-mock": "^2.2.0",
    "jest-runner-eslint": "^0.5.0",
    "jest-vue-preprocessor": "^1.4.0",
    "jquery": "^3.3.1",
    "truffle": "^4.1.13",
    "truffle-contract": "^3.0.6",
    "vue-jest": "^3.0.1",
    "vue-test-utils": "^1.0.0-beta.11",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "css-loader": "^0.28.11",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.5.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "install": "^0.12.2",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "npm": "^6.4.1",
    "vue": "^2.5.16",
    "vue-i18n": "^7.8.1",
    "vue-loader": "^14.2.3",
    "vue-template-compiler": "^2.5.16",
    "vuetify": "^1.3.12",
    "web3": "^1.0.0-beta.37",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-merge": "^4.1.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "testMatch": [
          "<rootDir>/src/test/specs/**/*.js"
        ],
        "moduleNameMapper": {
          "^vue$": "vue/dist/vue.common.js",
          "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
          "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        },
        "moduleFileExtensions": [
          "ts",
          "tsx",
         "js",
         "jsx",
         "json",
         "node",
          "vue"
        ],
        "modulePaths": [
          "node_modules",
          "src"
        ],
        "transform": {
          "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
          ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
        },
        "roots": [
          "src"
        ],
        "setupFiles": [
          "<rootDir>/src/test/globals.js",
          "jest-localstorage-mock",
          "jest-fetch-mock"
        ],
        "testURL": "http://localhost/"
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/test/specs/**/*.js"
        ]
      }
    ],
    "coverageDirectory": "<rootDir>/target/jest/coverage"
  }
}
