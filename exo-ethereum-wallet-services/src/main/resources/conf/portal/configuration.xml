<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.service.EthereumWalletStorage</type>
    <init-params>
      <value-param>
        <name>defaultNetworkId</name>
        <description>Default used ethereum network ID</description>
        <value>${exo.addon.wallet.defaultNetworkId:3}</value>
      </value-param>
      <value-param>
        <name>defaultNetworkURL</name>
        <description>Default used ethereum network URL</description>
        <value>${exo.addon.wallet.defaultNetworkURL:https://ropsten.infura.io}</value>
      </value-param>
      <value-param>
        <name>defaultNetworkWSURL</name>
        <description>Default used ethereum network Websocket URL</description>
        <value>${exo.addon.wallet.defaultNetworkWSURL:wss://ropsten.infura.io/ws}</value>
      </value-param>
      <value-param>
        <name>defaultAccessPermission</name>
        <description>Default access permission for wallet extension (only a space group id is allowed)</description>
        <value>${exo.addon.wallet.defaultAccessPermission:}</value>
      </value-param>
      <value-param>
        <name>defaultGas</name>
        <description>Default used gas for transactions</description>
        <value>${exo.addon.wallet.defaultGas:65000}</value>
      </value-param>
      <value-param>
        <name>defaultBlocksToRetrieve</name>
        <description>Default number of blocks to retrieve to list user's ether transactions</description>
        <value>${exo.addon.wallet.defaultBlocksToRetrieve:100}</value>
      </value-param>
      <value-param>
        <name>defaultContractAddresses</name>
        <description>
                Default list of contract addresses to display in user wallets when using default network.
                Once configured, it will be stored on DB and can't be changed.
             </description>
        <value>${exo.addon.wallet.defaultContractAddresses:0xf423038aae7310d547871ff714b4687ee2ecb37d}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.service.EthereumWalletNotificationService</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.service.EthereumClientConnector</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.rest.EthereumWalletGlobalSettingsREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.rest.EthereumWalletAccountREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.rest.EthereumWalletContractREST</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.addon.wallet.settings.changed</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.GlobalSettingsModificationListener</type>
      <description>To change listening network when WS Network URL changed in settings</description>
    </component-plugin>
    <component-plugin>
      <name>exo.addon.wallet.transaction.loaded</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.EthereumTransactionProcessorListener</type>
      <description>Listening to transactions coming from configured ethereum network</description>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.setting.PluginSettingService</target-component>
    <component-plugin profiles="all">
      <name>notification.groups</name>
      <set-method>registerGroupConfig</set-method>
      <type>org.exoplatform.commons.api.notification.plugin.GroupProviderPlugin</type>
      <description>Initial ethereum wallet group</description>
      <init-params>
        <object-param>
          <name>group.wallet</name>
          <description>The information of group wallet</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.GroupConfig">
            <field name="id">
              <string>wallet</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.group.Wallet</string>
            </field>
            <field name="order">
              <string>200</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.setting.PluginContainer</target-component>
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.ContractReceiverNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.ContractReceiverNotificationPlugin</name>
          <description>The template of ContractReceiverNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>ContractReceiverNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.ContractReceiverNotificationPlugin</string>
            </field>
            <field name="order">
              <string>4</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.ContractSenderNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.ContractSenderNotificationPlugin</name>
          <description>The template of ContractSenderNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>ContractSenderNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.ContractSenderNotificationPlugin</string>
            </field>
            <field name="order">
              <string>3</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>daily</string>
                </value>
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.EtherReceiverNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.EtherReceiverNotificationPlugin</name>
          <description>The template of EtherReceiverNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>EtherReceiverNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.EtherReceiverNotificationPlugin</string>
            </field>
            <field name="order">
              <string>2</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>daily</string>
                </value>
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.EtherSenderNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.EtherSenderNotificationPlugin</name>
          <description>The template of EtherSenderNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>EtherSenderNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.EtherSenderNotificationPlugin</string>
            </field>
            <field name="order">
              <string>1</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>daily</string>
                </value>
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.channel.ChannelManager</target-component>
    <component-plugin>
      <name>web.channel.wallet.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.WebTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>WEB_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>mail.channel.wallet.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.MailTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>MAIL_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
