<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.service.EthereumWalletService</type>
    <init-params>
      <value-param>
        <name>defaultNetworkId</name>
        <description>Default used ethereum network ID</description>
        <value>${exo.addon.wallet.defaultNetworkId:3}</value>
      </value-param>
      <value-param>
        <name>defaultNetworkURL</name>
        <description>Default used ethereum network URL</description>
        <value>${exo.addon.wallet.defaultNetworkURL:https://ropsten.infura.io}</value>
      </value-param>
      <value-param>
        <name>defaultNetworkWSURL</name>
        <description>Default used ethereum network Websocket URL</description>
        <value>${exo.addon.wallet.defaultNetworkWSURL:wss://ropsten.infura.io/ws}</value>
      </value-param>
      <value-param>
        <name>defaultAccessPermission</name>
        <description>Default access permission for wallet extension (only a space group id is allowed)</description>
        <value>${exo.addon.wallet.defaultAccessPermission:}</value>
      </value-param>
      <value-param>
        <name>defaultGas</name>
        <description>Default used gas for transactions</description>
        <value>${exo.addon.wallet.defaultGas:150000}</value>
      </value-param>
      <value-param>
        <name>defaultBlocksToRetrieve</name>
        <description>Default number of blocks to retrieve to list user's ether transactions</description>
        <value>${exo.addon.wallet.defaultBlocksToRetrieve:100}</value>
      </value-param>
      <value-param>
        <name>defaultBlocksToRetrieve</name>
        <description>Default number of blocks to retrieve to list user's ether transactions</description>
        <value>${exo.addon.wallet.defaultBlocksToRetrieve:100}</value>
      </value-param>
      <value-param>
        <name>contract.abi.path</name>
        <description>Token Contract ABI path</description>
        <value>${exo.addon.wallet.contract.abi.path:jar:/org/exoplatform/addon/ethereum/wallet/contract/ERTTokenV1.json}</value>
      </value-param>
      <value-param>
        <name>contract.bin.path</name>
        <description>Token Contract BIN path</description>
        <value>${exo.addon.wallet.contract.bin.path:jar:/org/exoplatform/addon/ethereum/wallet/contract/ERTTokenV1.bin}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.service.EthereumClientConnector</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.rest.EthereumWalletGlobalSettingsREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.rest.EthereumWalletAccountREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.ethereum.wallet.rest.EthereumWalletContractREST</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.addon.wallet.settings.changed</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.GlobalSettingsModificationListener</type>
      <description>To change listening network when WS Network URL changed in settings</description>
    </component-plugin>
    <component-plugin>
      <name>exo.addon.wallet.transaction.loaded</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.EthereumTransactionProcessorListener</type>
      <description>Listening to transactions coming from configured ethereum network</description>
    </component-plugin>
    <component-plugin>
      <name>exo.addon.wallet.block.loaded</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.EthereumLastWatchedBlockListener</type>
      <description>Save last watched block number</description>
    </component-plugin>
    <component-plugin>
      <name>exo.addon.wallet.addressAssociation.new</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.InitialFundsRequestListener</type>
      <description>Send initial funds request when a user creates a new wallet</description>
    </component-plugin>
    <component-plugin>
      <name>exo.addon.wallet.notification.upgrade</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.listener.NotificationSettingsUpgradeListener</type>
      <description>Upgrade notification settings to use 3 settings instead of 5</description>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.setting.PluginSettingService</target-component>
    <component-plugin profiles="all">
      <name>notification.groups</name>
      <set-method>registerGroupConfig</set-method>
      <type>org.exoplatform.commons.api.notification.plugin.GroupProviderPlugin</type>
      <description>Initial ethereum wallet group</description>
      <init-params>
        <object-param>
          <name>group.wallet</name>
          <description>The information of group wallet</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.GroupConfig">
            <field name="id">
              <string>wallet</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.group.Wallet</string>
            </field>
            <field name="order">
              <string>200</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.setting.PluginContainer</target-component>

    <!-- Wallet receiver notification plugin -->
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.plugin.WalletReceiverNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.WalletReceiverNotificationPlugin</name>
          <description>The template of WalletReceiverNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>EtherReceiverNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.EtherReceiverNotificationPlugin</string>
            </field>
            <field name="order">
              <string>4</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>

    <!-- Wallet Sender notification plugin -->
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.plugin.WalletSenderNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.WalletSenderNotificationPlugin</name>
          <description>The template of WalletSenderNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>EtherSenderNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.EtherSenderNotificationPlugin</string>
            </field>
            <field name="order">
              <string>3</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>

    <!-- Deprecated Wallet receiver notification plugin -->
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.plugin.WalletContractReceiverNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.ContractReceiverNotificationPlugin</name>
          <description>The template of ContractReceiverNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>ContractReceiverNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.ContractReceiverNotificationPlugin</string>
            </field>
            <field name="order">
              <string>4</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>

    <!-- Deprecated wallet Sender notification plugin -->
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.plugin.WalletContractSenderNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.ContractSenderNotificationPlugin</name>
          <description>The template of ContractSenderNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>ContractSenderNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.ContractSenderNotificationPlugin</string>
            </field>
            <field name="order">
              <string>3</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>

    <!-- Fund request notifications -->
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.plugin.FundsRequestNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.FundsRequestNotificationPlugin</name>
          <description>The template of FundsRequestNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>FundsRequestNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.FundsRequestNotificationPlugin</string>
            </field>
            <field name="order">
              <string>1</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>wallet</string>
            </field>
            <field name="bundlePath">
              <string>locale.notification.WalletNotification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.channel.ChannelManager</target-component>
    <component-plugin>
      <name>web.channel.wallet.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.provider.WebTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>WEB_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>mail.channel.wallet.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.provider.MailTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>MAIL_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>push.channel.wallet.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>org.exoplatform.addon.ethereum.wallet.notification.provider.MobilePushTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>PUSH_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  <external-component-plugins>
    <target-component>org.exoplatform.services.cache.CacheService</target-component>
    <component-plugin>
      <name>addExoCacheConfig</name>
      <set-method>addExoCacheConfig</set-method>
      <type>org.exoplatform.services.cache.ExoCacheConfigPlugin</type>
      <description>Configures the cache for Wallet Transaction Messages Cache</description>
      <init-params>
        <object-param>
          <name>wallet.transactionsMessages</name>
          <description></description>
          <object type="org.exoplatform.services.cache.impl.infinispan.generic.GenericExoCacheConfig">
            <field name="name">
              <string>wallet.transactionsMessages</string>
            </field>
            <field name="maxSize">
              <int>${exo.cache.wallet.transactionsMessages.MaxNodes:1000}</int>
            </field>
            <field name="liveTime">
              <long>${exo.cache.wallet.transactionsMessages.TimeToLive:-1}</long>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
